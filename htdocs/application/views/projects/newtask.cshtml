@{
use Scabbia\Extensions\Http\Http;
use Scabbia\Extensions\Helpers\Html;
use Scabbia\Extensions\Helpers\String;
use Scabbia\Extensions\Session\Session;
use Scabbia\Extensions\Views\Views;
use App\Includes\ViewHelpers;
}
@Views::viewFile('{app}views/shared/header.cshtml')
@Views::viewFile('{app}views/shared/nav/project.cshtml', $model)

<section id="main">
@Views::viewFile('{app}views/shared/top_navigation.cshtml', $model)

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="tab-header">New Task</div>
                <form class="fill-up" method="post" action="@Http::url('projects/newtask/' . $projectId)">
                    <div class="row-fluid">
                        <div class="padded">
                            <div>
                                <div class="span6">
                                    <div class="input">
                                        <label for="Type" class="caption">Type</label>
                                        <select name="type" id="Type" placeholder="Type" class="fill-up chzn-select">
                                        @Html::selectOptions($types, null, 'name')
                                        </select>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="input">
                                        <label for="Section" class="caption">Section</label>
                                        <select name="section" id="Section" placeholder="Section" class="fill-up chzn-select">
                                            <option>[ANY]</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="input">
                                    <label for="Name" class="caption">Subject</label>
                                    <input type="text" placeholder="Name" name="name"/>
                                </div>
                                <div class="input">
                                    <label for="Description" class="caption">Description</label>
                                    <textarea placeholder="Description" name="description" rows="6"></textarea>
                                </div>
                            </div>
                            <div>
                                <div class="span6">
                                    <div class="input" style="margin-bottom:10px;">
                                        <label for="Status" class="caption">Status</label>
                                        <select name="status" id="Status" placeholder="Status" class="fill-up chzn-select">
                                            <option>[ANY]</option>
                                        </select>
                                    </div>
                                    <div class="input" style="margin-bottom:8px; margin-left:-1px;">
                                        <label for="Priority" class="caption">Priority</label>
                                        <select name="priority" id="Priority" placeholder="Priority" class="fill-up chzn-select">
                                            <option>[ANY]</option>
                                        </select>
                                    </div>
                                    <div class="input">
                                        <label for="Assignee" class="caption">Assignee</label>
                                        <select name="assignee" id="Assignee" placeholder="Assignee" class="fill-up chzn-select">
                                            <option>[ANY]</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="input">
                                        <label for="StartDate" class="caption">Start Date</label>
                                        <input id="datetimepicker" name="startdate" type="text" class="fill-up" value="Click">
                                    </div>

                                    <div class="input" >
                                        <label for="EndDate" class="caption">End Date</label>
                                        <input id="datetimepicker2" name="enddate" type="text" class="fill-up" value="Click">
                                    </div>
                                    <div class="input span3" style="margin-left:-3px;">
                                        <label for="EstimatedTime" class="caption">Estimated Time</label>
                                        <input type="text" placeholder="Hours" name="estimated"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="pull-right">
                            <button type="submit" class="button blue">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="footer">
                    <div>2012 &copy; Plastique Admin Theme</div>
                </div>
            </div>
        </div>
    </div>
</section>

@Views::viewFile('{app}views/shared/footer.cshtml')