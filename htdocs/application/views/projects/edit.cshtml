@{
use Scabbia\Extensions\Http\Http;
use Scabbia\Extensions\Helpers\Html;
use Scabbia\Extensions\Helpers\String;
use Scabbia\Extensions\Session\Session;
use Scabbia\Extensions\Views\Views;
use App\Includes\ViewHelpers;
}
@Views::viewFile('{app}views/shared/header.cshtml')
@Views::viewFile('{app}views/shared/nav/projects.cshtml', $model)

<section id="main">
    <div class="top-nav">
        <div class="container-fluid">
            <div class="row-fluid search-button-bar-container">
                <div class="span12">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="icon-home"></i> Some</a></li>
                        <li><a href="#">Nice</a></li>
                        <li><a href="#">Breadcrumbs</a></li>
                        <li class=""><a href="#">Here</a></li>
                    </ul>
                    <a class="search-button-trigger" href="#"><i class="icon-search"></i></a> </div>
            </div>
            <div class="row-fluid search-bar-nav">
                <div class="span12">
                    <form>
                        <input type="text" class="search" placeholder="Search...">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span6">
                @if (!is_null($alert = Session::getFlash('alert'))) {
                <div class="alert alert-@$alert[0]">
                    @$alert[1]
                </div>
                }

                <div class="box">
                    <div class="tab-header"> Edit Project </div>
                    <form class="fill-up" method="post" action="@Http::url('projects/edit/' . $id)">
                        <div class="row-fluid">
                            <div class="span12">
                                <div style="padding-right:12px;">

                                    <div class="btn-group pull-right">

                                        <a href="@Http::url('projects')" class="button blue">Project List</a>

                                    </div>
                                </div>

                                <div class="padded">

                                    <div class="input">
                                        <label for="Name" class="caption">Name</label>
                                        <input type="text" placeholder="Name" name="name" value="@String::htmlEscape($data['name'])" />

                                    </div>
                                    <div class="input">
                                        <label for="Title" class="caption">Title</label>
                                        <input type="text" placeholder="Title" name="title" value="@String::htmlEscape($data['title'])" />

                                    </div>
                                    <div class="input">
                                        <label for="Password" class="caption">Subtitle</label>
                                        <input type="text" placeholder="Subtitle" name="subtitle" value="@String::htmlEscape($data['subtitle'])" />

                                    </div>
                                    <div class="input">
                                        <label for="ShortDescription" class="caption" style="float:none">Short Description</label>
                                        <textarea placeholder="This is a textarea" rows="6" name="shortdescription">@String::htmlEscape($data['shortdescription'])</textarea>

                                    </div>
                                    <div class="input">
                                        <label for="Description" class="caption">Description</label>
                                        <textarea placeholder="This is a textarea" rows="6" name="description">@String::htmlEscape($data['description'])</textarea>
                                    </div>

                                    <div class="input">
                                        <label for="Parent" class="caption">Parent Project</label>
                                        <select name="parent" id="Parent" placeholder="Parent Project" class="fill-up chzn-select">
                                        <option value="">[None]</option>
                                        @Html::selectOptions($projects, (int)$data['parent'], 'name')
                                        </select>

                                    </div>
                                    <div class="input">
                                        <label for="Type" class="caption">Type</label>
                                        <select name="type" id="Type" placeholder="Type" class="fill-up chzn-select">
                                        @Html::selectOptions($projectTypes, $data['type'], 'name')
                                        </select>
                                    </div>

                                    <div class="input row-fluid">
                                        <input type="checkbox" id="Sourceforge" name="sourceforge" value="1" class="normal-check" @{ if (isset($data['sourceforge']) && $data['sourceforge'] === '1') { echo 'checked="checked" '; } }/>
                                        <label for="Sourceforge" class="span4">Sourceforge</label>

                                        <input type="checkbox" id="Public" name="public" value="1" class="normal-check" @{ if (isset($data['public']) && $data['public'] === '1') { echo 'checked="checked" '; } }/>
                                        <label for="Public" class="span4">Public</label>

                                    </div>

                                    <div class="input">
                                        <label for="License" class="caption">License</label>
                                        <input type="text" placeholder="License" name="license" value="@String::htmlEscape($data['license'])" />
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="pull-right">
                                <button type="submit" class="button blue">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="footer">
                    <div>2012 &copy; Plastique Admin Theme</div>
                </div>
            </div>
        </div>
    </div>
</section>

@Views::viewFile('{app}views/shared/footer.cshtml')