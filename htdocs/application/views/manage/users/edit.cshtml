@{
use Scabbia\Extensions\Http\Http;
use Scabbia\Extensions\Helpers\Html;
use Scabbia\Extensions\Helpers\String;
use Scabbia\Extensions\Session\Session;
use Scabbia\Extensions\Views\Views;
use App\Includes\ViewHelpers;
}
@Views::viewFile('{app}views/shared/header.cshtml')
@Views::viewFile('{app}views/shared/nav/manage.cshtml', $model)

<section id="main">
@Views::viewFile('{app}views/shared/top_navigation.cshtml', $model)

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span6">
                @if (!is_null($alert = Session::getFlash('alert'))) {
                <div class="alert alert-@$alert[0]">
                    @$alert[1]
                </div>
                }

                <div class="box">
                    <div class="tab-header"> User Edit </div>
                    <form class="fill-up" method="post" action="@Http::url('manage/users/edit/' . $id)">
                        <div class="row-fluid">
                            <div class="span12">
                                <div style="padding-right:12px;">

                                    <div class="btn-group pull-right">

                                        <a href="@Http::url('manage/users')" class="button blue">User List</a>

                                    </div>
                                </div>

                                <div class="padded">

                                    <div class="input">
                                        <label for="Name" class="caption">Name</label>
                                        <input type="text" placeholder="Name" name="name" value="@String::htmlEscape($data['name'])" />

                                    </div>
                                    <div class="input">
                                        <label for="Username" class="caption">Username</label>
                                        <input type="text" placeholder="Username" name="username" value="@String::htmlEscape($data['username'])" />

                                    </div>
                                    <div class="input">
                                        <label for="Password" class="caption">Password</label>
                                        <input type="password" placeholder="Password" name="password" value="@String::htmlEscape($data['password'])" />

                                    </div>
                                    <div class="input">
                                        <label for="E-mail" class="caption">E-mail</label>
                                        <input type="text" placeholder="E-mail" name="email" value="@String::htmlEscape($data['email'])" />

                                    </div>
                                    <div class="input">
                                        <label for="Phone" class="caption">Phone</label>
                                        <input type="text" placeholder="Phone" name="phone" value="@String::htmlEscape($data['phone'])" />

                                    </div>
                                    <div class="input">
                                        <label for="Role" class="caption">Role</label>
                                        <select name="siterole" id="Role" placeholder="Role" class="fill-up chzn-select">
                                        @Html::selectOptions($roles, (int)$data['siterole'], 'name')
                                        </select>
                                    </div>

                                    <div class="input">
                                        <label for="Scmid" class="caption">SCM ID</label>
                                        <input type="text" placeholder="Scmid" name="scmid" value="@String::htmlEscape($data['scmid'])" />
                                    </div>

                                    <div class="input row-fluid">
                                        <label for="Groups" class="caption">Groups</label>

                                        @foreach ($groups as $group) {
                                            <input type="checkbox" id="groups-@$group['id']" name="groups[@$group['id']]" value="1" class="normal-check" @{ if (in_array($group['id'], $usergroups)) { echo 'checked="checked" '; } }/>
                                            <label for="groups-@$group['id']" class="span4">@$group['name']</label>
                                        }

                                    </div>

                                    <div class="input">
                                        <label for="Page" class="caption" style="float:none">Page</label>
                                        <textarea placeholder="This is a textarea" rows="6" name="page">@String::htmlEscape($data['page'])</textarea>

                                    </div>
                                    <div class="input">
                                        <label for="Bio" class="caption">Bio</label>
                                        <textarea placeholder="This is a textarea" rows="6" name="bio">@String::htmlEscape($data['bio'])</textarea>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="pull-right">
                                <button type="submit" class="button blue">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row-fluid">
@Views::viewFile('{app}views/shared/copyright.cshtml')
        </div>
    </div>
</section>

@Views::viewFile('{app}views/shared/footer.cshtml')